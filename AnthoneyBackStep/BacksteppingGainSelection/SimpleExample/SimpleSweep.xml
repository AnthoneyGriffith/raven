<?xml version="1.0" ?>
<Simulation  verbosity="debug">

  <RunInfo>
    <WorkingDir>./sweep</WorkingDir>
    <Sequence>
      eval
    </Sequence>
  </RunInfo>

  <Steps>
    <MultiRun name="eval" sleepTime="1e-5">
    <Input class="DataObjects" type="PointSet">dummyIN</Input>
    <Model class="Models" type="ExternalModel">Simple</Model>
    <Sampler class="Samplers" type="Grid">Sampler</Sampler>
    <Output class="DataObjects" type="PointSet">Evaluations</Output>
    <Output class="OutStreams" type="Print">outEvaluations</Output>
    </MultiRun>
  </Steps>

  <Models>
    <ExternalModel ModuleToLoad="../Simple.py" name="Simple" subType="">
      <inputs>k1, k2</inputs>
      <outputs>E_Ts_x1, E_Tr_x1, E_OS_x1, E_Osc_x1, E_Ts_x2, E_Tr_x2, E_OS_x2, E_Osc_x2, E_Up, E_Ui, J</outputs>
    </ExternalModel>
  </Models>

  <Distributions>
    <Uniform name='Bounds1'>
      <lowerBound>0</lowerBound>
      <upperBound>5</upperBound>
    </Uniform>
    <Uniform name='Bounds2'>
      <lowerBound>0</lowerBound>
      <upperBound>2</upperBound>
    </Uniform>
  </Distributions>

  <Samplers>
    <Grid name="Sampler">
      <variable name="k1">
        <distribution>Bounds1</distribution>
        <grid construction="equal" steps="50" type="value">1e-3 5</grid>
      </variable>
      <variable name="k2">
        <distribution>Bounds2</distribution>
        <grid construction="equal" steps="50" type="value">1e-3 2</grid>
      </variable>
    </Grid>
  </Samplers>

  <DataObjects>
    <PointSet name="dummyIN">
      <Input>k1, k2</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name="Evaluations">
      <Input>k1, k2</Input>
      <Output>E_Ts_x1, E_Tr_x1, E_OS_x1, E_Osc_x1, E_Ts_x2, E_Tr_x2, E_OS_x2, E_Osc_x2, E_Up, E_Ui, J</Output>
    </PointSet>
  </DataObjects>

  <OutStreams>
    <!-- A csv file containing the output of the example -->
    <Print name="outEvaluations">
      <type>csv</type>
      <source>Evaluations</source>
      <filename>evaluations</filename>
      <what>input,output,metadata</what>
    </Print>
  </OutStreams>
</Simulation>
