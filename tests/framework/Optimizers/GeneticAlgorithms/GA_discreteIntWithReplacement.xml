<?xml version="1.0" ?>
<Simulation verbosity="debug">
  <RunInfo>
    <WorkingDir>discreteIntWithReplacement</WorkingDir>
    <!--Sequence>sample, print</Sequence-->
    <Sequence>opt, print, printExport</Sequence>
    <batchSize>10</batchSize>
    <internalParallel>False</internalParallel>
  </RunInfo>

  <Steps>
    <MultiRun name="sample">
      <Input          class="DataObjects" type="PointSet"         >placeholder</Input>
      <Model          class="Models"      type="ExternalModel"    >MKbase</Model>
      <Sampler        class="Samplers"    type="MonteCarlo"       >MC</Sampler>
      <Output         class="DataObjects" type="PointSet"         >optOut</Output>
    </MultiRun> 
    <MultiRun name="opt" >
      <Input          class="DataObjects" type="PointSet"         >placeholder</Input>
      <Model          class="Models"      type="ExternalModel"    >MKbase</Model>
      <Optimizer      class="Optimizers"  type="GeneticAlgorithm" >GAoptimizer</Optimizer>
      <SolutionExport class="DataObjects" type="PointSet"         >opt_export</SolutionExport>
      <Output         class="DataObjects" type="PointSet"         >optOut</Output>
    </MultiRun>
    <IOStep name="print">
      <Input  class="DataObjects"  type="PointSet"  >optOut</Input>
      <Output class="OutStreams"   type="Print"     >PrintOptOut</Output>
    </IOStep>
    <IOStep name="printExport">
      <Input  class="DataObjects"  type="PointSet"  >opt_export</Input>
      <Output class="OutStreams"   type="Print"     >PrintOptOut_export</Output>
    </IOStep>
  </Steps>

  <Distributions>
    <UniformDiscrete name="unif_dist_wRepl">
      <lowerBound>0</lowerBound>   <!-- 0 implies not chosen -->
      <upperBound>5</upperBound>
      <strategy>withReplacement</strategy>
    </UniformDiscrete>
  </Distributions>

  <Optimizers>
    <GeneticAlgorithm name="GAoptimizer">
      <samplerInit>
        <limit>20</limit>
        <initialSeed>42</initialSeed>
        <writeSteps>every</writeSteps>
      </samplerInit>

      <GAparams>
        <populationSize>10</populationSize>
        <parentSelection>rouletteWheel</parentSelection>
        <reproduction nParents="4">
          <crossover type="onePointCrossover">
            <points>3</points>
            <crossoverProb>0.8</crossoverProb>
          </crossover>
          <mutation type="scrambleMutator">
            <locs>2,5</locs>
            <mutationProb>0.2</mutationProb>
          </mutation>
        </reproduction>
        <fitness type="logistic">
          <a>0.2</a>
          <b>13.0</b>
        </fitness>
        <survivorSelection>fitnessBased</survivorSelection>
      </GAparams>

      <convergence>
        <objective>20.0</objective>
      </convergence>

      <variable name="proj1">
        <distribution>unif_dist_wRepl</distribution>
        <initial>0,1,0,2,3,0,4,5,0,1</initial>
      </variable>
      <variable name="proj2">
        <distribution>unif_dist_wRepl</distribution>
        <initial>1,0,2,3,0,4,5,0,1,2</initial>
      </variable>
      <variable name="proj3">
        <distribution>unif_dist_wRepl</distribution>
        <initial>2,0,3,4,0,5,0,1,2,3</initial>
      </variable>
      <variable name="proj4">
        <distribution>unif_dist_wRepl</distribution>
        <initial>3,4,0,5,0,1,2,0,3,4</initial>
      </variable>
      <variable name="proj5">
        <distribution>unif_dist_wRepl</distribution>
        <initial>4,0,5,0,1,2,0,3,4,5</initial>
      </variable>
      <variable name="proj6">
        <distribution>unif_dist_wRepl</distribution>
        <initial>5,0,1,2,0,3,0,4,5,0</initial>
      </variable>
      <variable name="proj7">
        <distribution>unif_dist_wRepl</distribution>
        <initial>0,1,0,2,3,0,4,5,0,1</initial>
      </variable>
      <variable name="proj8">
        <distribution>unif_dist_wRepl</distribution>
        <initial>1,2,0,3,4,5,0,1,2,0</initial>
      </variable>
      <variable name="proj9">
        <distribution>unif_dist_wRepl</distribution>
        <initial>2,0,3,0,4,5,0,1,2,3</initial>
      </variable>
      <variable name="proj10">
        <distribution>unif_dist_wRepl</distribution>
        <initial>3,0,4,5,0,1,0,2,3,4</initial>
      </variable>

      <objective>planValue</objective>
      <TargetEvaluation class="DataObjects" type="PointSet">optOut</TargetEvaluation>
    </GeneticAlgorithm>
  </Optimizers>

  <Models>
    <ExternalModel ModuleToLoad="MKmodel" name="MKbase" subType="">
      <variables>proj1,proj2,proj3,proj4,proj5,proj6,proj7,proj8,proj9,proj10,planValue,validPlan</variables>
    </ExternalModel>
  </Models>

  <DataObjects>
    <PointSet name="placeholder"/>
    <PointSet name="optOut">
      <Input>proj1,proj2,proj3,proj4,proj5,proj6,proj7,proj8,proj9,proj10</Input>
      <Output>planValue,validPlan</Output>
    </PointSet>
    <PointSet name="opt_export">
      <Input>trajID</Input>
      <Output>proj1,proj2,proj3,proj4,proj5,proj6,proj7,proj8,proj9,proj10,planValue</Output>
    </PointSet>
  </DataObjects>

  <OutStreams>
    <Print name="PrintOptOut">
      <type>csv</type>
      <source>optOut</source>
    </Print>
    <Print name="PrintOptOut_export">
      <type>csv</type>
      <source>opt_export</source>
    </Print>
  </OutStreams>
  
  <Samplers>
    <MonteCarlo name="MC">
      <samplerInit>
        <limit>10000</limit>
        <initialSeed>1234</initialSeed>
      </samplerInit>
      <variable name="proj1">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
      <variable name="proj2">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
      <variable name="proj3">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
      <variable name="proj4">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
      <variable name="proj5">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
      <variable name="proj6">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
      <variable name="proj7">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
      <variable name="proj8">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
      <variable name="proj9">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
      <variable name="proj10">
        <distribution>unif_dist_wRepl</distribution>
      </variable>
    </MonteCarlo>
  </Samplers> 

</Simulation>
