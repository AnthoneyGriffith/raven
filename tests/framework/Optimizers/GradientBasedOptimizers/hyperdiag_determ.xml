<?xml version="1.0" ?>
<Simulation verbosity="debug">
  <TestInfo>
    <name>framework/Optimizers/GradientBasedOptimizers.hyperdiagonalDeterministic</name>
    <author>talbpaul</author>
    <created>2017-03-16</created>
    <classesTested>Optimizers.SPSA</classesTested>
    <description>
       Runs optimization on a model that determines the longest diagonal of a hyperrectangle.  Arbitrary numbers of inputs are
       possible for this model.  This model is also the deterministic version.
    </description>
    <analytic>
      This test uses an analytic model with analytic results.  The last point in the optimization search should be near
      to the square root of of the number of input dimensions (~1.73205080757 for 3 dimensions).
    </analytic>
  </TestInfo>

  <RunInfo>
    <WorkingDir>HyperdiagonalDeterministic</WorkingDir>
    <Sequence>optimize,print</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Steps>
    <MultiRun name="optimize">
      <Input class="DataObjects" type="PointSet">dummyIN</Input>
      <Model class="Models" type="ExternalModel">hyperd</Model>
      <Optimizer class="Optimizers" type="SPSA">opter</Optimizer>
      <SolutionExport class="DataObjects" type="HistorySet">opt_export</SolutionExport>
      <Output class="DataObjects" type="PointSet">optOut</Output>
    </MultiRun>
    <IOStep name="print" pauseAtEnd="True">
      <Input class="DataObjects" type="PointSet">optOut</Input>
      <Input class="DataObjects" type="HistorySet">opt_export</Input>
      <Output class="OutStreams" type="Print">opt_dump</Output>
      <Output class="OutStreams" type="Print">opt_export</Output>
      <Output class="OutStreams" type="Plot">convergenceHistory</Output>
    </IOStep>
  </Steps>

  <Optimizers>
    <SPSA name="opter">
      <initialization>
        <limit>2000</limit>
        <type>max</type>
        <initialSeed>42</initialSeed>
      </initialization>
      <TargetEvaluation class="DataObjects" type="PointSet">optOut</TargetEvaluation>
      <convergence>
          <relativeThreshold>1e-7</relativeThreshold>
      </convergence>
      <parameter>
        <a>0.5</a>
        <A>0</A>
      </parameter>
      <variable name='x1'>
        <lowerBound>0</lowerBound>
        <upperBound>1</upperBound>
      </variable>
      <variable name='x2'>
        <lowerBound>0</lowerBound>
        <upperBound>1</upperBound>
      </variable>
      <variable name='x3'>
        <lowerBound>0</lowerBound>
        <upperBound>1</upperBound>
      </variable>
      <objectVar>diagonal</objectVar>
    </SPSA>
  </Optimizers>

  <Models>
    <Dummy name="MyDummy" subType=""/>
    <ExternalModel ModuleToLoad="../../../../framework/AnalyticModels/hyperdiagonal" name="hyperd" subType="">
      <variables>x1,x2,x3,diagonal</variables>
    </ExternalModel>
  </Models>

  <DataObjects>
    <PointSet name="dummyIN">
      <Input>x1,x2,x3</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <PointSet name="optOut">
      <Input>x1,x2,x3</Input>
      <Output>diagonal</Output>
    </PointSet>
    <HistorySet name="opt_export">
      <Input>trajID</Input>
      <Output>x1,x2,x3,diagonal,varsUpdate</Output>
    </HistorySet>
  </DataObjects>

  <OutStreams>
    <Print name="opt_dump">
      <type>csv</type>
      <source>optOut</source>
    </Print>
    <Print name="opt_export">
      <type>csv</type>
      <source>opt_export</source>
    </Print>
    <Plot  name="convergenceHistory" overwrite="false" verbosity="debug">
        <plotSettings>
            <plot>
                <type>scatter</type>
                <x>opt_export|Output|varsUpdate</x>
                <y>opt_export|Output|diagonal</y>
            </plot>
            <xlabel>iteration</xlabel>
            <ylabel>diagonal</ylabel>
        </plotSettings>
        <actions>
            <how>png</how>
            <title>
                <text> </text>
            </title>
        </actions>
    </Plot>
  </OutStreams>

</Simulation>
