<?xml version="1.0" ?>
<Simulation verbosity="all">
  <TestInfo>
    <name>framework/PostProcessors/DynamicSystemScaling/test_dssv2</name>
    <author>yoshrk</author>
    <created>2021-03-16</created>
    <classesTested>PostProcessors.DSSv2</classesTested>
    <description>
      This test checks the DSSv2 PostProcessor with DSSv2 metric
    </description>
    <revisions>
      <revision author='yoshrk' date='2021-03-16'>no writing directly to files from postprocessors</revision>
    </revisions>
  </TestInfo>

  <RunInfo>
    <WorkingDir>DSS</WorkingDir>
    <Sequence>mcRun1, mcRun2, PP6</Sequence>
    <batchSize>1</batchSize>
  </RunInfo>

  <Models>
    <ExternalModel ModuleToLoad="lorentzAttractor_timeScale_I" name="PythonModule1" subType="">
      <variables>sigma,rho,beta,x1,y1,z1,time1,x0,y0,z0</variables>
    </ExternalModel>
    <ExternalModel ModuleToLoad="lorentzAttractor_timeScale_II" name="PythonModule2" subType="">
      <variables>sigma,rho,beta,x2,y2,z2,time2,x0,y0,z0</variables>
    </ExternalModel>
    <PostProcessor name="pp6" subType="PPDSSv2">
      <Features type="variable">x1,y1,z1</Features>
      <pivotParameterFeature>time1</pivotParameterFeature>
      <Targets type="variable">x2,y2,z2</Targets>
      <pivotParameterTarget>time2</pivotParameterTarget>
      <multiOutput>raw_values</multiOutput>
      <Metric class="Metrics" type="DSSv2">dss</Metric>
      <scale>DataSynthesis</scale>
      <scaleBeta>1,1,1</scaleBeta>
      <scaleOmega>1,1,1</scaleOmega>
    </PostProcessor>
  </Models>

  <Metrics>
      <DSSv2 name="dss">
          <actionType>DataSynthesis</actionType>
      </DSSv2>
  </Metrics>

  <DataObjects>
    <PointSet name="inputPlaceHolder">
      <Input>x0,y0,z0</Input>
      <Output>OutputPlaceHolder</Output>
    </PointSet>
    <HistorySet name="pp6_out">
      <Output>
          dss_x2_x1,x2_x1_total_distance,x2_x1_process_time,x2_x1_standard_deviation,
          dss_y2_y1,y2_y1_total_distance,y2_y1_process_time,y2_y1_standard_deviation,
          dss_z2_z1,z2_z1_total_distance,z2_z1_process_time,z2_z1_standard_deviation
      </Output>
      <options>
        <pivotParameter>pivot_parameter</pivotParameter>
      </options>
    </HistorySet>
    <HistorySet name="outMC1">
      <Input>x0,y0,z0</Input>
      <Output>time1,x1,y1,z1</Output>
      <options>
        <pivotParameter>time1</pivotParameter>
      </options>
    </HistorySet>
    <HistorySet name="outMC2">
      <Input>x0,y0,z0</Input>
      <Output>time2,x2,y2,z2</Output>
      <options>
        <pivotParameter>time2</pivotParameter>
      </options>
    </HistorySet>
  </DataObjects>

  <OutStreams>
    <Print name="pp6_print">
      <type>csv</type>
      <source>pp6_out</source>
    </Print>
  </OutStreams>


  <Distributions>
    <Normal name="x0_distrib">
      <mean>4</mean>
      <sigma>1</sigma>
    </Normal>
    <Normal name="y0_distrib">
      <mean>4</mean>
      <sigma>1</sigma>
    </Normal>
    <Normal name="z0_distrib">
      <mean>4</mean>
      <sigma>1</sigma>
    </Normal>
  </Distributions>

  <Samplers>
    <MonteCarlo name="MC_external">
      <samplerInit>
        <limit>10</limit>
        <initialSeed>1</initialSeed>
      </samplerInit>
      <variable name="x0">
        <distribution>x0_distrib</distribution>
      </variable>
      <variable name="y0">
        <distribution>y0_distrib</distribution>
      </variable>
      <variable name="z0">
        <distribution>z0_distrib</distribution>
      </variable>
    </MonteCarlo>
  </Samplers>

  <Steps>
    <MultiRun name="mcRun1" re-seeding="20021986">
      <Input     class="DataObjects"      type="PointSet"       >inputPlaceHolder</Input>
      <Model     class="Models"           type="ExternalModel"  >PythonModule1</Model>
      <Sampler   class="Samplers"         type="MonteCarlo"     >MC_external</Sampler>
      <Output    class="DataObjects"      type="HistorySet"     >outMC1</Output>
    </MultiRun>
    <MultiRun name="mcRun2" re-seeding="13010405">
      <Input     class="DataObjects"      type="PointSet"       >inputPlaceHolder</Input>
      <Model     class="Models"           type="ExternalModel"  >PythonModule2</Model>
      <Sampler   class="Samplers"         type="MonteCarlo"     >MC_external</Sampler>
      <Output    class="DataObjects"      type="HistorySet"     >outMC2</Output>
    </MultiRun>
    <PostProcess name="PP6">
      <Input class="DataObjects" type="HistorySet">outMC1</Input>
      <Input class="DataObjects" type="HistorySet">outMC2</Input>
      <Model class="Models" type="PostProcessor">pp6</Model>
      <Output class="DataObjects" type="PointSet">pp6_out</Output>
      <Output class="OutStreams" type="Print">pp6_print</Output>
    </PostProcess>
  </Steps>

</Simulation>
